{
  "manifest_version": 3,
  "name": "圖片嗅探下載器",
  "version": "1.0.3",
  "description": "自動嗅探網頁上的所有圖片並提供下載的工具",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "permissions": [
    "activeTab",
    "downloads",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "chekvip@protonmail.com",
      "strict_min_version": "109.0"
    }
  }
}
